  background-repeat: no-repeat;
}


    h1 {
      text-align: center;
      color: azure;
    }

    .input-group {
      margin-bottom: 15px;
    }

    .input-group i {
      padding: 10px;
    }

    input[type="text"],
    input[type="email"],
    input[type="number"],
    input[type="password"] {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      background-color: #1e221e;
      color: white;
      cursor: pointer;
    }

    button:hover {
      background-color:crimson;
    }

    p {
      text-align: center;
      color: azure;
    }

    a {
      text-decoration: none;
      color: #27932a;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <form method="post" action="/signup" onsubmit="return validateForm()" >
    <h1>Sign Up</h1>
    <div class="input-group">
      <i style="color: antiquewhite;" class="fas fa-user"></i>
      <input type="text" name="name" placeholder="Username" id="name" required>
    </div>
    <div class="input-group">
      <i  style="color: antiquewhite;" class="fas fa-envelope"></i>
      <input type="email" name="email" placeholder="Email" id="email" required>
    </div>
    <div class="input-group">
      <i style="color: antiquewhite;" class="fas fa-phone"></i>
      <input class="message" type="number" name="mobile" placeholder="Mobile" id="phone" required>
    </div>
    <div class="input-group">
      <i  style="color: antiquewhite;" class="fas fa-lock"></i>
      <input type="password" name="password" placeholder="Password" id="password" required>
    </div>
    <div class="input-group">
      <i  style="color: antiquewhite;" class="fas fa-lock"></i>
      <input type="password" name="confirm_password" placeholder="Confirm Password" id="confirm_password" required>
    </div>
    <button>Sign up</button>
    <p>
      <span>Already have an account?</span>
      <a href="/login">Sign in here</a>
    </p>
  </form>

  <script>
     function validateForm() {
    var name = document.getElementById("name").value;
    var email = document.getElementById("email").value;
    var phone = document.getElementById("phone").value;
    var password = document.getElementById("password").value;
    var confirmPassword = document.getElementById("confirm_password").value;

    // Regular expressions
    var nameRegex = /^[a-zA-Z\s]+$/;
    var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    var phoneRegex = /^(\+91|0)?[6789]\d{9}$/;
    var passwordRegex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}$/;

    if (!nameRegex.test(name)) {
      alert("Name is not valid");
      return false;
    }

    if (!emailRegex.test(email)) {
      alert("Email is not valid");
      return false;
    }

    if (!phoneRegex.test(phone)) {
      alert("Phone number is not valid");
      return false;
    }

    if (!passwordRegex.test(password)) {
      alert("Password is not valid. It should contain at least 8 characters, one uppercase letter, one lowercase letter, and one digit.");
      return false;
    }

    if (confirmPassword !== password) {
      alert("Confirm Password should match the Password");
      return false;
    }

     // Store the mobile number for OTP verification
      window.userMobileForOtp = phone;

      // Submit the form to sendOtp endpoint
      
    return true;
  }
  </script>
</body>

</html>