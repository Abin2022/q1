                        <div class="table-responsive">
                            <table class="table w-100" id="mytable">
                                <thead>
                                    <tr>
                                        <th scope="col">NO</th>

                                        <th scope="col">BRAND</th>
                                        <th scope="col">PRODUCT</th>
                                        <th scope="col">CATEGORY</th>
                                        <th scope="col">STOCK</th>
                                        <th scope="col">PRICE</th>
                                        <th scope="col">IMAGE</th>
                                        <th scope="col">DESCRIPTION</th>
                                        <th scope="col">OPTIONS</th>



                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each products}}
                                    <tr>
                                        <th class="align-middle" scope="row">{{serialNumber}}</th>
                                        <td class="align-middle">{{brand}}</td>
                                        <td class="align-middle">{{productname}}</td>
                                        <td class="align-middle">{{category}}</td>
                                        <td class="align-middle">{{inStock}}</td>
                                        <td class="align-middle">₹{{price}}</td>
                                        <td class="align-middle"><img src="/uploads/{{images.[0]}}" alt="image"
                                                width="50px" height="50px" type="file" accept="image/*"></td>
                                        <td class="align-middle">{{description}}</td>

                                        <td class="align-middle">
                                            <a href="/admin/edit-product?id={{_id}}"
                                                class="btn btn-primary m-2">Edit</a>
                                            {{#if unlist}}
                                            <a href="/admin/list-products?id={{this._id}}"
                                                class="btn btn-outline-success m-2"
                                                onclick="return confirm('Are you sure you want to list this product?')">list</a>
                                            {{else}}
                                            <a href="/admin/unlist-products?id={{this._id}}"
                                                class="btn btn-outline-danger m-2"
                                                onclick="return confirm('Are you sure you want to Unlist this product?')">unlist</a>
                                            {{/if}}


                                            {{!-- <a href="/admin/unlist-category?id={{this._id}}"
                                                class="btn btn-danger"
                                                onclick="return confirm('Are you sure you want to Delete {{this.productname}}?')">Delete</a>
                                            --}}
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Add Product</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/admin/add-products" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="brand" class="form-label">BRAND</label>
                                <input type="text" name="brand" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="product-name" class="form-label">PRODUCT NAME</label>
                                <input type="text" name="productname" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="category" class="form-label">Category</label>
                                <select name="category" class="form-control" required>
                                    {{#each categories}}

                                    {{!-- Skip rendering the option for unlisted categories --}}

                                    <option value="{{category}}">{{category}}</option>

                                    {{/each}}
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="stock" class="form-label">STOCK</label>
                                <input type="number" name="stock" class="form-control" required
                                    oninput="validateStock(this)">
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">PRICE</label>
                                <input type="number" name="price" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">IMAGE</label>
                                <input type="file" name="image" class="form-control" type="file" accept="image/*"
                                    multiple required>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">DESCRIPTION</label>
                                <input type="text" name="description" class="form-control" required>
                            </div>
                        </div>


                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

